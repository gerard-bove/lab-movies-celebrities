<h2>Edit movie</h2>
<form action="edit" method="post">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value={{movie.title}}>
    <label for="genre">Genre</label>
    <input type="text" id="genre" name="genre" value={{movie.genre}}>
    <label for="plot">Plot</label>
    <input type="text" id="plot" name="plot" value={{movie.plot}}>
    <label for="cast" id="cast"></label>
    <select name="cast" id="cast" multiple="true">
        {{#each movie.cast}}
            <option value={{id}}>{{name}}
        {{/each}}
    </select>
    <button type="submit" >Edit Movie</button>
</form>
<a class="btn btn-primary" href="/movie/{{movie._id}}">Back to detail</a>